@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<h1>@ViewData["Title"]</h1>


<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h2>Criar uma nova conta.</h2>
    <div class="row">
        <div class="col-md-4">

            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* read the authentication data *@
            <div class="form-floating mt-1">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mt-1">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mt-1">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Confirmar Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-1">Registar</button>
        </div>
        <div class="col-md-4">
            @*read the new artist data*@
            <div class="form-floating">
                <div>
                    <label asp-for="Input.Name">Nome</label>
                    <input asp-for="Input.Name" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                    
                </div>               
            </div> 
            <br />
            <label>Tipo de utilizador</label>
            <div class="form-check">
                <input asp-for="Input.Role" class="form-check-input" type="radio" value="u" aria-required="true" checked/>
                <label asp-for="Input.Role" class="form-check-label">Utilizador</label>
            </div>
            <div class="form-check">
                <input asp-for="Input.Role" class="form-check-input" type="radio" value="a" aria-required="true/>
                <label asp-for="Input.Role" class="form-check-label">Artista</label>
            </div>
            <span asp-validation-for="Input.Role" class="text-danger"></span>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
